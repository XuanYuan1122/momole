<?xml version="1.0" encoding="utf-8"?>
<com.moemoe.lalala.view.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="7dp"
    app:sl_shadowRadius="1dp"
    app:sl_cornerRadius="5dp"
    app:sl_dy="1dp"
    app:sl_shadowColor="@color/default_shadow_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_white_border_selector">

        <LinearLayout
            android:id="@+id/ll_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/txt_size_main"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="11区网友评选死前最想看的动漫"/>

                <TextView
                    android:id="@+id/tv_post_from_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="新闻部"
                    android:layout_gravity="center_vertical|left"
                    android:paddingLeft="6dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:paddingRight="6dp"
                    android:textSize="@dimen/txt_size_secondary"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_class_from_orange"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="neta编辑部"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/ll_title_container"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/setting_txt_mian_size"/>

        <LinearLayout
            android:id="@+id/rl_doc_like_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/ll_title_container"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_pants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_official_jc_small_normal" />

            <TextView
                android:id="@+id/tv_post_pants_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="4dp"
                android:text="0"
                android:textColor="@color/main_title_cyan"
                android:textSize="@dimen/txt_size_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_doc_comment_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/rl_doc_like_pack"
            android:layout_below="@+id/ll_title_container"
            android:orientation="horizontal"
            android:paddingLeft="2dp" >

            <ImageView
                android:id="@+id/iv_post_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_official_comment_normal" />

            <TextView
                android:id="@+id/tv_post_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="0"
                android:textColor="@color/green_tag_normal"
                android:textSize="@dimen/txt_size_secondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="24分钟以前"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/setting_txt_mian_size"
            android:layout_alignBottom="@+id/rl_doc_comment_pack"
            android:layout_toRightOf="@+id/rl_doc_comment_pack"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_doc_comment_pack"
            android:textColor="@color/gray_txt_main"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="这两三年来我们和邪社送飞机杯已经是稀松平常的事了，所以在今年我和Dreanmmask Studio联合搞了绅士们更加喜爱的福利"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:id="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_post_special_flag"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@color/main_title_cyan" >

                <ImageView
                    android:id="@+id/iv_post_flag_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vote" />

                <TextView
                    android:id="@+id/tv_post_vote_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_doc_vote_nums"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_mini" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_1_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_2_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_3_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_img_num"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/ll_image_3"
            android:layout_alignRight="@+id/ll_image_3"
            android:background="#88aaaaaa"
            android:gravity="center"
            android:text="共9张"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />
    </RelativeLayout>
</com.moemoe.lalala.view.ShadowLayout>