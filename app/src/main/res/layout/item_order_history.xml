<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y220"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_commodity"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:layout_marginStart="@dimen/x24"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_commodity"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:layout_marginTop="@dimen/y44"/>

    <TextView
        android:id="@+id/tv_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y30"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/iv_commodity"
        android:textColor="@color/txt_green_red"
        android:layout_marginStart="@dimen/x24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_e8e8e8"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x36"
        android:textSize="@dimen/x24"
        android:textColor="@color/gray_929292"
        android:layout_alignStart="@+id/tv_order_state"/>

</RelativeLayout>