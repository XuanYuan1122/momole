<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/x36"
        android:layout_marginStart="@dimen/x36"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_dash_mid">

        <TextView
            android:id="@+id/tv_doc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x36"
            android:layout_marginEnd="@dimen/x36"
            android:layout_marginBottom="@dimen/y36"
            android:layout_marginTop="@dimen/y20"
            android:lineSpacingExtra="@dimen/y18"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/x30"
            android:text=""/>
    </LinearLayout>
</FrameLayout>
