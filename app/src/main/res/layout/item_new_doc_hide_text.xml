<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginStart="@dimen/size_18"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_dash_mid">

        <TextView
            android:id="@+id/tv_doc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18"
            android:layout_marginRight="@dimen/size_18"
            android:layout_marginBottom="@dimen/size_18"
            android:layout_marginTop="@dimen/size_10"
            android:lineSpacingExtra="9dp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/size_15"
            android:text="巴拉巴拉巴拉"/>
    </LinearLayout>
</FrameLayout>
