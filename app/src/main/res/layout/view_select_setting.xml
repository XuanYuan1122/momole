<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_normal_white_btn"
    android:layout_gravity="center_vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16">

        <TextView
            android:id="@+id/tv_function_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/tv_function_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12"
            android:textColor="@color/gray_d7d7d7"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/btn_select" />
    
    <View style="@style/HorizontalSep"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>