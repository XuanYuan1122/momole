<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_cyan"
        app:navigationIcon="@drawable/ic_go_back"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text=""
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_menu_search"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_menu_search"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_menu_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_menu_loli"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="主页"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingRight="5dp"
            android:visibility="gone"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/size_18"
                android:text=""/>

            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/gray_929292"
                    android:text=""/>

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:visibility="gone">
                </ImageView>

                <com.moemoe.lalala.view.widget.longimage.LongImageView
                    android:id="@+id/iv_doc_long_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </FrameLayout>

            <com.moemoe.lalala.view.widget.view.DocLabelView
                android:id="@+id/dv_doc_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                app:child_view_height="22dp"
                app:child_view_width="wrap_content"
                app:line_spacing="7dp"
                app:label_spacing="7dp">

            </com.moemoe.lalala.view.widget.view.DocLabelView>

            <LinearLayout
                android:id="@+id/ll_like_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/dv_doc_label"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_spitball_huaji"/>

                <TextView
                    android:id="@+id/tv_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/yellow_f2cc2c"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dislike_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_like_container"
                android:layout_alignTop="@+id/ll_like_container"
                android:orientation="horizontal"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:id="@+id/iv_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_spitball_yaxi"/>

                <TextView
                    android:id="@+id/tv_dislike_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/gray_929292"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/ll_like_container"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/txt_white_red"
                android:gravity="center"
                android:textStyle="bold"
                android:text="收藏"
                android:background="@drawable/btn_trash_favorite"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

    </ScrollView>

    <com.moemoe.lalala.view.widget.view.KeyboardListenerLayout
        android:id="@+id/ll_comment_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f2f2f3"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:visibility="gone" >

        <EditText
            android:id="@+id/edt_comment_input"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_comment_send"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_gray"
            android:gravity="center_vertical"
            android:hint="@string/a_hint_input_comment"
            android:maxLines="5"
            android:minHeight="34dp"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="4dp"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/iv_comment_send"
            android:layout_width="48dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/edt_comment_input"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_rect_white_click_cyan"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/txt_white_gray"
            android:textSize="@dimen/size_15" />
    </com.moemoe.lalala.view.widget.view.KeyboardListenerLayout>
</RelativeLayout>