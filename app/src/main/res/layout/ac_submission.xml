<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f6f6f6">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/neta_bar"/>

    <LinearLayout
        android:id="@+id/ll_submission_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y24"
        android:paddingStart="@dimen/x36"
        android:paddingEnd="@dimen/x36"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投稿学部"
            android:textColor="@color/black_1e1e1e"
            android:textSize="@dimen/x30"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/x30"
            android:gravity="end"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x36"
        android:paddingEnd="@dimen/x36"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择文章"
            android:textColor="@color/black_1e1e1e"
            android:textSize="@dimen/x30"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_doc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/x30"
            android:gravity="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/x100"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x24"
        android:layout_marginTop="@dimen/y24"
        android:gravity="center"
        android:text="投稿完成后请耐心等待审核，进度可以在投稿箱内看见"/>
</LinearLayout>