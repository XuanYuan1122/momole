<?xml version="1.0" encoding="utf-8"?>
<com.moemoe.lalala.view.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="true"
    app:sl_shadowRadius="1dp"
    app:sl_cornerRadius="5dp"
    app:sl_dy="1dp"
    app:sl_shadowColor="@color/default_shadow_color">

    <RelativeLayout
        android:layout_width="134dp"
        android:layout_height="180dp"
        android:background="@drawable/btn_white_border_selector">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/shape_calender_item2"
            android:text="第3话"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/alph_60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="龙与公主"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2016-02-08"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

    </RelativeLayout>
</com.moemoe.lalala.view.ShadowLayout>