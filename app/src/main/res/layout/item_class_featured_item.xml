<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/btn_white_border_selector">

    <com.moemoe.lalala.view.MyRoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rect_type="round"
        app:riv_left_top_radius="5dp"
        app:riv_left_bottom_radius="5dp"
        app:riv_right_top_radius="5dp"
        app:riv_right_bottom_radius="5dp"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="龙与公主"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rect_text_gray"/>


</RelativeLayout>