    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/btn_map_main"/>

    <RelativeLayout
        android:id="@+id/rl_main_list_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_map_phone"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_sys_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="@dimen/size_30"
            android:text="11:30"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_9"
            android:layout_below="@+id/tv_sys_time"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_inform_reddot"
            android:drawableStart="@drawable/ic_inform_reddot"
            android:drawablePadding="@dimen/size_2"
            android:text="23条新内容"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/live2DLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
