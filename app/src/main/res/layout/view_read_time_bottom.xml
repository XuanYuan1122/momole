<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/y16"
    android:paddingBottom="@dimen/y16"
    android:paddingStart="@dimen/x24"
    android:paddingEnd="@dimen/x24">

    <include
        android:id="@+id/layout_battery"
        layout="@layout/layout_battery_progress"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x16"
        android:layout_toEndOf="@+id/layout_battery"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x20"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/tv_time"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>