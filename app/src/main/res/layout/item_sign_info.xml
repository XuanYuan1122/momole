<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_rect_greed_sign">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/txt_size_secondary"
            android:textStyle="bold"
            android:text="1"
            android:background="@color/label_green"/>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/label_green"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="@string/label_sign_info_score"/>

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textColor="@color/label_green"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="@string/label_sign_info_coin"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:textColor="@color/label_green"
        android:text="@string/label_sign_times"
        android:textSize="@dimen/txt_size_secondary"/>

</LinearLayout>