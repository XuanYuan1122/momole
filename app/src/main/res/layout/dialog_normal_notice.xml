<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/x420"
    android:layout_height="@dimen/y260"
    android:layout_gravity="center"
    android:background="@drawable/bg_rect_corner_white_5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y70"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:visibility="visible"/>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/x420"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/y70"
            android:background="@color/gray_d7d7d7"/>

    <LinearLayout
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/main_cyan"
            android:text="@string/label_cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/gray_d7d7d7"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/main_cyan"
            android:text="@string/label_confirm"/>
    </LinearLayout>
</LinearLayout>