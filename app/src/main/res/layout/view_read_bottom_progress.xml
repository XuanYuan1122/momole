<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/gray_4b5052"
    android:paddingLeft="@dimen/size_15"
    android:paddingStart="@dimen/size_15"
    android:paddingRight="@dimen/size_15"
    android:paddingEnd="@dimen/size_15"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_progress_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_12"
        android:textColor="@color/white_50"
        android:layout_marginTop="@dimen/size_10"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/seekbar_reading_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:thumb="@drawable/ic_word_slide"
        android:progressDrawable="@drawable/seekbar_bg"
        android:thumbOffset="10dp" />

</LinearLayout>