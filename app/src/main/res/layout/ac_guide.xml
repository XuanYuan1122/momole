<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guide_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_class_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/ll_point_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/pager_class_banner">

        <LinearLayout
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <View
            android:id="@+id/view_pressed_point"
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y20"
            android:background="@drawable/icon_class_banner_switch_blue"/>
    </RelativeLayout>


</RelativeLayout>