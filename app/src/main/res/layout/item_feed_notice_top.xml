<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y64"
    android:paddingStart="@dimen/x24"
    android:paddingEnd="@dimen/x24"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_e8e8e8"/>

    <ImageView
        android:id="@+id/iv_top_img"
        android:layout_width="@dimen/y36"
        android:layout_height="@dimen/y36"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_feed_inform_trends"/>

    <TextView
        android:id="@+id/tv_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_top_img"
        android:layout_marginStart="@dimen/x8"
        android:textSize="@dimen/x24"/>

    <TextView
        android:id="@+id/tv_top_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x24"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_929292"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>