<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_f6f6f6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="46dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/shape_rect_label_gray_6"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:textStyle="bold"
                android:text="签名"/>

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12"
                android:textColor="@color/gray_929292"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="46dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/shape_rect_label_gray_6"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:textStyle="bold"
                android:text="称号"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginStart="@dimen/size_15"
                android:layout_gravity="center_vertical"
                android:text="LV32"/>

            <RelativeLayout
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_9"
                    android:textColor="@color/gray_d7d7d7"
                    android:layout_toLeftOf="@+id/tv_need_score"
                    android:layout_toStartOf="@+id/tv_need_score"
                    android:text="还需要"/>

                <TextView
                    android:id="@+id/tv_need_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/size_9"
                    android:textColor="@color/main_cyan"
                    android:text="188"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_9"
                    android:textColor="@color/gray_d7d7d7"
                    android:layout_toRightOf="@+id/tv_need_score"
                    android:layout_toEndOf="@+id/tv_need_score"
                    android:text="学分升级"/>

                <ProgressBar
                    android:id="@+id/pb_score"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="@dimen/size_3"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_marginBottom="24dp"
                    android:layout_below="@+id/tv_need_score"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_level_name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"
                android:src="@drawable/ic_lv_means"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="46dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/shape_rect_label_gray_6"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:textStyle="bold"
                android:text="徽章"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/iv_huizhang_1"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"/>

                <FrameLayout
                    android:id="@+id/fl_huizhang_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_huizhang_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_15"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/size_8"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_4"
                        android:paddingStart="@dimen/size_4"
                        android:paddingEnd="@dimen/size_4"
                        android:paddingRight="@dimen/size_4"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/iv_huizhang_2"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal" />

                <FrameLayout
                    android:id="@+id/fl_huizhang_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_huizhang_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_15"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/size_8"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_4"
                        android:paddingStart="@dimen/size_4"
                        android:paddingEnd="@dimen/size_4"
                        android:paddingRight="@dimen/size_4"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:id="@+id/iv_huizhang_3"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"/>

                <FrameLayout
                    android:id="@+id/fl_huizhang_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_huizhang_3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_15"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/size_8"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_4"
                        android:paddingStart="@dimen/size_4"
                        android:paddingEnd="@dimen/size_4"
                        android:paddingRight="@dimen/size_4"/>
              </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_more_root"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/size_12"
                android:paddingRight="@dimen/size_12">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_array_right_gray"/>
            </FrameLayout>
        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="55dp"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/size_10"
             android:background="@color/white">

             <TextView
                 android:id="@+id/tv_liuyan_num"
                 android:layout_width="wrap_content"
                 android:layout_height="24dp"
                 android:layout_gravity="center_vertical"
                 android:gravity="center"
                 android:layout_marginStart="@dimen/size_10"
                 android:layout_marginLeft="@dimen/size_10"
                 android:background="@drawable/shape_rect_label_gray_6"
                 android:textColor="@color/white"
                 android:textSize="@dimen/size_15"
                 android:paddingLeft="@dimen/size_8"
                 android:paddingStart="@dimen/size_8"
                 android:paddingEnd="@dimen/size_8"
                 android:paddingRight="@dimen/size_8"
                 android:textStyle="bold"
                 android:text="@string/label_liuyan"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_comments_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            android:id="@+id/tv_all_liuyan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center"
            android:background="@drawable/bg_normal_white_btn"
            android:textSize="@dimen/size_15"
            android:textColor="@color/gray_d7d7d7"
            android:text="查看全部"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>