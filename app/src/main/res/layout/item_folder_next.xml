<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="266dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pre_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/size_12"
                android:layout_gravity="center_horizontal"
                android:text="上一话"/>

            <RelativeLayout
                android:id="@+id/rl_pre_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_mark"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_rect_manhua_2"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:layout_marginTop="@dimen/size_8"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size_10"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_next_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_45"
            android:layout_marginStart="@dimen/size_45"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/size_12"
                android:layout_gravity="center_horizontal"
                android:text="下一话"/>

            <RelativeLayout
                android:id="@+id/rl_next_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10">

                <ImageView
                    android:id="@+id/iv_cover_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_mark_next"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_rect_manhua_2"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:layout_marginTop="@dimen/size_8"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size_10"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>