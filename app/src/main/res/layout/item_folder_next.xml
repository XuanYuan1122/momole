<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y532"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pre_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x24"
                android:layout_gravity="center_horizontal"
                android:text="上一话"/>

            <RelativeLayout
                android:id="@+id/rl_pre_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_mark"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y48"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_rect_manhua_2"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:layout_marginTop="@dimen/y16"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/x20"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_next_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x90"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/x24"
                android:layout_gravity="center_horizontal"
                android:text="下一话"/>

            <RelativeLayout
                android:id="@+id/rl_next_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20">

                <ImageView
                    android:id="@+id/iv_cover_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_mark_next"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y48"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_rect_manhua_2"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_929292"
                android:layout_marginTop="@dimen/y16"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/x20"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>