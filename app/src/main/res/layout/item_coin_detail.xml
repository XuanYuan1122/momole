<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y134"
    android:background="@drawable/bg_normal_white_btn"
    android:paddingStart="@dimen/x30"
    android:paddingEnd="@dimen/x20">

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x80"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_coin"
        android:layout_toEndOf="@+id/tv_coin"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginBottom="@dimen/y16"
        android:text="@string/label_my_coin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="@dimen/x20">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x36"
            android:textColor="@color/gray_d7d7d7"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_d7d7d7"
            android:textSize="@dimen/x20"/>

    </LinearLayout>

</RelativeLayout>