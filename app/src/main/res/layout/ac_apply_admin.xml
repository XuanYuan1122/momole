<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/neta_bar"/>

    <EditText
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
        android:paddingTop="@dimen/y24"
        android:paddingStart="@dimen/x36"
        android:paddingEnd="@dimen/x36"
        android:layout_marginTop="@dimen/y24"
        android:textSize="@dimen/x30"
        android:textColor="@color/black_1e1e1e"
        android:hint="申请理由(100字内)"
        android:textColorHint="@color/gray_929292"
        android:gravity="top"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y48"
        android:layout_marginStart="@dimen/x36"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x30"
        android:text="管理员是什么啥？好吃的吗www？"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginStart="@dimen/x36"
        android:textSize="@dimen/x24"
        android:textColor="@color/gray_929292"
        android:text="@string/label_apply_admin_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y48"
        android:layout_marginStart="@dimen/x36"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x30"
        android:text="申请之后会怎么样？"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginStart="@dimen/x36"
        android:textSize="@dimen/x24"
        android:textColor="@color/gray_929292"
        android:text="@string/label_apply_admin_2"/>
</LinearLayout>