<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8"/>

    <LinearLayout
        android:id="@+id/ll_recommend_top_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x24"
        android:paddingLeft="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_1e1e1e"
            android:textSize="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:layout_marginBottom="@dimen/y36"
            android:text="相关推荐"/>

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/x24"
            android:layout_marginTop="@dimen/y36"
            android:layout_marginBottom="@dimen/y36"
            android:drawableStart="@drawable/ic_bag_switch"
            android:drawablePadding="@dimen/size_2"
            android:text="换一组"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recommend_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>
</LinearLayout>