<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:src="@drawable/bg_default_circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginStart="@dimen/size_12"
            android:textSize="@dimen/size_16"
            android:textColor="@color/black_1e1e1e"/>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_26"
            android:background="@drawable/btn_rect_corner_cyan_3"
            android:text="@string/label_follow"
            android:textColor="@color/txt_white_cyan"
            android:textSize="@dimen/size_12"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_folder_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_18"
        android:paddingRight="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:visibility="gone">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8"/>

    <LinearLayout
        android:id="@+id/ll_recommend_top_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_1e1e1e"
            android:textSize="@dimen/size_12"
            android:layout_marginTop="@dimen/size_18"
            android:layout_marginBottom="@dimen/size_18"
            android:text="相关推荐"/>

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/size_12"
            android:layout_marginTop="@dimen/size_18"
            android:layout_marginBottom="@dimen/size_18"
            android:drawableLeft="@drawable/ic_bag_switch"
            android:drawablePadding="@dimen/size_2"
            android:text="换一组"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recommend_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_18"
        android:paddingRight="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:visibility="gone">

    </LinearLayout>
</LinearLayout>