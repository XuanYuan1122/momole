<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_label_root"
    android:layout_width="wrap_content"
    android:layout_height="22dp"
    android:background="@drawable/btn_follow_label">

    <TextView
        android:id="@+id/tv_item_label_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_marginStart="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_gravity="center_vertical"
        android:text=""
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/size_10"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/et_item_label_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_marginStart="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:background="@null"
        android:singleLine="true"
        android:textSize="@dimen/size_10"
        android:imeOptions="actionDone"
        android:visibility="gone"/>

    <View
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="#ffffff"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_item_label_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/size_10" />
</LinearLayout>
