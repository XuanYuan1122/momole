<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_web_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/web_ac_background"
    android:minWidth="480dip" >

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout 
        android:id="@+id/rl_web_custom_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>
    
    <ProgressBar
        android:id="@+id/pgbar_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_progress_bar_height"
        android:progressDrawable="@drawable/web_progress_horizonntal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_web_fail_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_web_refresh"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/web_ic_refresh" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_web_refresh"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/web_a_label_network_error_to_refresh"
            android:textColor="#9e9e9e"
            android:textSize="13dp" />
    </RelativeLayout>

    
    
</RelativeLayout>