<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    style="@style/Neta.Card">

    <LinearLayout
        android:id="@+id/ll_comment_ops"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/label_delete"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_own_del_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_own_comment_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/label_delete"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14"
                android:visibility="visible" />

            <View
                android:layout_width="88dp"
                android:layout_height="1px"
                android:background="@color/gray_d7d7d8" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/label_reply"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            android:visibility="visible" />

        <View
            android:layout_width="88dp"
            android:layout_height="1px"
            android:background="@color/gray_d7d7d8"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_comment_copy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/label_copy_dust"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="88dp"
            android:layout_height="1px"
            android:background="@color/gray_d7d7d8"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_comment_report"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/label_jubao"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

</android.support.v7.widget.CardView>