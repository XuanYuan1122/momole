<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_time_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:visibility="visible" >

        <View
            android:layout_width = "match_parent"
            android:layout_height="1px"
            android:background="@color/main_cyan"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
           	android:layout_toStartOf="@+id/tv_time_table"/>

        <TextView
            android:id="@+id/tv_time_table"
            android:layout_width="@dimen/y180"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="2015-8-10"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/x24" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_cyan"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_toEndOf="@+id/tv_time_table" />
    </RelativeLayout>

</LinearLayout>