<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_time_label"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="visible" >

        <View
            android:layout_width = "match_parent"
            android:layout_height="1px"
            android:background="@color/main_cyan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" 
           	android:layout_toLeftOf="@+id/tv_time_table"/>

        <TextView
            android:id="@+id/tv_time_table"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="2015-8-10"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/size_12" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_cyan"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_time_table" />
    </RelativeLayout>

</LinearLayout>