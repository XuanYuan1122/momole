<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/neta_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_neta_secret"
            android:layout_width="@dimen/x364"
            android:layout_height="@dimen/y305"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y128"
            android:src="@drawable/ic_about_logo_normal" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_app_version"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y20"
            android:text="@string/app_name"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_copyright"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y84"
            android:text="@string/app_version"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y46"
            android:text="@string/label_copyright"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/x24" />
    </RelativeLayout>
</LinearLayout>