<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_post_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity"
    android:paddingBottom="5dp">

   <RelativeLayout
        android:id="@+id/rl_doc_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_normal_white_btn"
        android:paddingBottom="10dp" >

        <RelativeLayout
            android:id="@+id/rl_content_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep" >

            <TextView
                android:id="@+id/tv_post_creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊lfjaosiefj a;isefj;alikefja;iksfoefjiofj"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_offical_title" />

            <LinearLayout
                android:id="@+id/rl_doc_like_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_post_creator_name"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_pants"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/btn_official_jc_small" />

                <TextView
                    android:id="@+id/tv_post_pants_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="14dp"
                    android:text="999+"
                    android:textColor="@color/gray_txt_main"
                    android:textSize="@dimen/txt_size_secondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_doc_comment_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_post_creator_name"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingLeft="2dp" >

                <ImageView
                    android:id="@+id/iv_post_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_official_comment_normal" />

                <TextView
                    android:id="@+id/tv_post_comment_num"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="99+"
                    android:textColor="@color/gray_txt_main"
                    android:textSize="@dimen/txt_size_secondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_post_creator_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                android:text="2小时前"
                android:textColor="@color/gray_txt_main"
                android:textSize="@dimen/txt_size_main" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_content_top"
            android:layout_marginLeft="12dp"
            android:text="做一份让工作"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/txt_size_main"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_post_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="芳文社旗下发型的越看漫画扎实xxxxxxx01年飞机额发型单片做平asdasdasdadadasdadsadsadsadasdasdadasdadadadsd"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/txt_size_main" />

        <ImageView
            android:id="@+id/iv_doc_top_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_sticky_post"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_brief"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >
            
            <ImageView
	            android:id="@+id/iv_class_post_img"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/tv_post_brief"
	            android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_post_special_flag"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/main_title_cyan" >

                <ImageView
                    android:id="@+id/iv_post_flag_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vote" />

                <TextView
                    android:id="@+id/tv_post_vote_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_doc_vote_nums"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_mini" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_1_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_2_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_3_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_img_num"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/ll_image_3"
            android:layout_alignRight="@+id/ll_image_3"
            android:background="#88aaaaaa"
            android:gravity="center"
            android:text="共9张"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />
        
        <View 
            android:layout_below="@+id/ll_image_3"
            android:id="@+id/view_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:visibility="gone"/>

       <View
           android:id="@+id/view_doc_sep"
           android:layout_below="@+id/ll_image_3"
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_marginTop="11dp"
           android:background="#d7d7d8"
           />

       <com.moemoe.lalala.view.DocLabelView
           android:layout_below="@+id/view_doc_sep"
           android:id="@+id/dv_doc_label_root"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="8dp"
           android:layout_marginLeft="12dp"
           android:layout_marginRight="12dp"
           app:child_view_height="22dp"
           app:child_view_width="wrap_content"
           app:line_spacing="7dp"
           app:label_spacing="7dp"
           >
       </com.moemoe.lalala.view.DocLabelView>
    </RelativeLayout>
    
   	<TextView
        android:id="@+id/tv_post_bottom_from_name"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginLeft="17dp"
        android:drawableLeft="@drawable/ic_from_club"
        android:text="新闻部"   
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:drawablePadding="4dp"
        android:textSize="@dimen/txt_size_main"
        android:textColor="@color/white" 
        android:background="@drawable/btn_class_from_orange_offical"
        android:visibility="gone"/>
        
    <View
        android:id="@+id/view_flag_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>