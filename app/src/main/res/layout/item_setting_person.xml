    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View style="@style/HorizontalSep" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x30"
        android:text="@string/label_person_setting"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x24" />

    <View style="@style/HorizontalSep" />

    <include
        android:id="@+id/set_select_deskmate"
        layout="@layout/style_setting"
        android:visibility="gone"/>

    <include
        android:id="@+id/set_change_psw"
        layout="@layout/style_setting" />

    <include
        android:id="@+id/set_change_address"
        layout="@layout/style_setting" />

    <include
        android:id="@+id/set_black_list"
        layout="@layout/style_setting" />
</LinearLayout>