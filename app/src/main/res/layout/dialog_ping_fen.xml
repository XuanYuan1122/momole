<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x500"
    android:layout_height="@dimen/y240"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_rect_corner_pink_6">

    <com.moemoe.lalala.view.widget.view.KiraRatingBar
        android:id="@+id/kira_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y48"
        app:srb_fillColor="@color/white"
        app:srb_borderColor="@color/white"
        app:srb_pressedFillColor="@color/white"
        app:srb_pressedBorderColor="@color/white"
        app:srb_starSize="@dimen/x60"
        app:srb_numberOfStars="5"
        app:srb_stepSize="1"/>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="提交"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:paddingTop="@dimen/y16"
        android:paddingBottom="@dimen/y16"
        android:background="@android:color/transparent"/>
</LinearLayout>