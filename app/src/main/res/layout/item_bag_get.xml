<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_28">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_18"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_18"
        android:background="@drawable/shape_bg_5"/>

    <TextView
        android:id="@+id/tv_got"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bag_mask_green"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_8"
        android:paddingStart="@dimen/size_8"
        android:text="已拥有"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom|end"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_18"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:gravity="right|end"
        android:paddingEnd="@dimen/size_8"
        android:paddingRight="@dimen/size_8">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/size_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/size_27"
            android:text=""/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/size_2"
            android:text=""/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        android:src="@drawable/btn_select_normal"/>

</FrameLayout>