<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f6f6f6">

    <com.moemoe.lalala.view.widget.recycler.PullAndLoadView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.moemoe.lalala.view.widget.recycler.PullAndLoadView>

    <ViewStub
        android:id="@+id/stub_read_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/view_read_top"
        android:inflatedId="@+id/read_top"/>

    <ViewStub
        android:id="@+id/stub_bottom_progress"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout="@layout/view_read_bottom_progress"
        android:inflatedId="@+id/read_bottom_progress"/>

    <ViewStub
        android:id="@+id/stub_read_time_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/view_read_time_bottom"
        android:inflatedId="@+id/read_time_bottom"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>