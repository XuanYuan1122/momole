<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/y74"
    android:paddingEnd="@dimen/x18">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y56"
        android:gravity="center"
        android:paddingStart="@dimen/x16"
        android:paddingEnd="@dimen/x16"
        android:textSize="@dimen/x30"
        android:layout_marginEnd="@dimen/y18"
        android:layout_gravity="bottom"
        android:textColor="@color/txt_gray_d7d7d7_main"
        android:background="@drawable/bg_tags"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/y36"
        android:layout_height="@dimen/y36"
        android:src="@drawable/btn_sanguo_cancel"
        android:layout_gravity="end"
        android:visibility="gone"/>
</FrameLayout>