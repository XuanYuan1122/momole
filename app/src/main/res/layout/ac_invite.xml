<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
    android:id="@+id/top_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/status_bar_height"
    android:background="@color/white"/>

    <include layout="@layout/neta_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_name_root"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_normal_white_btn"
        android:visibility="visible"
        android:layout_marginTop="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_15"
            android:text="我的邀请人" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_18"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/size_14"
            android:textColor="@color/pink_fb7ba2"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_normal_white_btn"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_15"
            android:text="我的邀请码" />

        <TextView
            android:id="@+id/tv_invit_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/size_14"
            android:textColor="@color/pink_fb7ba2"
            android:gravity="end" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/main_cyan"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_18"
            android:text="复制"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_normal_white_btn"
        android:visibility="visible"
        android:layout_marginTop="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/gray_929292"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_15"
            android:text="邀请过的好友" />

        <TextView
            android:id="@+id/tv_guize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_18"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/size_14"
            android:textColor="@color/main_cyan"
            android:gravity="end"
            android:text="福利规则说明"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>