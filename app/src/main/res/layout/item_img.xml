<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x284"
            android:layout_height="@dimen/y386"
            android:src="@drawable/btn_deskmate_chose_len"/>

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/x284"
            android:layout_height="@dimen/y386"
            android:background="@color/white_70"
            android:visibility="gone"/>
    </FrameLayout>


    <View
        android:id="@+id/view_select"
        android:layout_width="@dimen/x194"
        android:layout_height="@dimen/y8"
        android:layout_marginTop="@dimen/y16"
        android:background="@color/pink_fb7ba2"
        android:visibility="gone"/>
</LinearLayout>