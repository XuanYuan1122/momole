<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_post_creator"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginTop="12dp"
        android:background="@drawable/raw_bg_circle_white_border_gray"
        android:src="@drawable/bg_default_circle" />

    <RelativeLayout
        android:id="@+id/rl_level_pack"
        android:layout_width="26dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/iv_post_creator"
        android:layout_alignLeft="@+id/iv_post_creator"
        android:layout_alignStart="@+id/iv_post_creator"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:padding="@dimen/size_1"
        android:background="@drawable/shape_white_5">

        <RelativeLayout
            android:id="@+id/rl_level_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_green_10">

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginStart="@dimen/size_4"
                android:textSize="@dimen/size_5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/tv_level"
                android:text="LV"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginStart="@dimen/size_2"
                android:layout_toRightOf="@+id/tv_lv"
                android:layout_toEndOf="@+id/tv_lv"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/size_7"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_post_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toRightOf="@+id/iv_post_creator"
        android:layout_toEndOf="@+id/iv_post_creator"
        android:layout_alignTop="@+id/iv_post_creator"
        android:layout_marginTop="@dimen/size_3"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/size_15" />

    <TextView
        android:id="@+id/tv_post_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_post_creator_name"
        android:layout_alignStart="@+id/tv_post_creator_name"
        android:layout_below="@+id/tv_post_creator_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/size_12" />

    <FrameLayout
        android:id="@+id/fl_huizhang_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignTop="@+id/tv_post_creator_name"
        android:layout_toRightOf="@+id/tv_post_creator_name"
        android:layout_toEndOf="@+id/tv_post_creator_name"
        android:layout_marginTop="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginStart="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_1"
        android:layout_toRightOf="@+id/fl_huizhang_1"
        android:layout_toEndOf="@+id/fl_huizhang_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginStart="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_2"
        android:layout_toRightOf="@+id/fl_huizhang_2"
        android:layout_toEndOf="@+id/fl_huizhang_2"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginStart="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_26"
        android:background="@drawable/btn_rect_corner_cyan_6"
        android:text="@string/label_follow"
        android:textColor="@color/txt_white_cyan"
        android:textSize="@dimen/size_15"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>
