<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white">

    <com.moemoe.lalala.view.MyRoundedImageView
        android:id="@+id/iv_post_creator"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/raw_bg_circle_white_border_gray"
        android:src="@drawable/ic_default_avatar_m"
        app:rect_type="circle"
        />

    <ImageView
        android:id="@+id/iv_post_owner_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_post_creator"
        android:layout_alignLeft="@+id/iv_post_creator"
        android:layout_alignRight="@+id/iv_post_creator"
        android:layout_alignTop="@+id/iv_post_creator"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="-2dp"
        android:scaleType="fitXY"
        android:src="@drawable/sign_owner_avatar_big"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_post_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_post_creator"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/txt_size_main" />

    <RelativeLayout
        android:id="@+id/rl_level_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_post_creator_name"
        android:layout_marginTop="17dp" >

        <ImageView
            android:id="@+id/iv_level_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fd9f00"
            android:src="@drawable/bg_level_mini" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="2"
            android:textColor="#fd9f00"
            android:textSize="9dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_post_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_post_creator_name"
        android:layout_below="@+id/tv_post_creator_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray_txt_main"
        android:textSize="@dimen/txt_size_secondary" />
</RelativeLayout>
