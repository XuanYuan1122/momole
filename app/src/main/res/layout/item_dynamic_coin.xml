<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_coin_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:layout_marginTop="@dimen/y24"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/y140"
            android:layout_height="@dimen/y140"
            android:src="@drawable/icon_doc_givecoins_len_give"/>

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_left"
            android:layout_marginTop="@dimen/y40"
            android:layout_marginStart="@dimen/x10"
            android:textStyle="bold"
            android:textSize="@dimen/x32"
            android:textColor="@color/pink_fb7ba2"
            android:text="@string/label_accept_my_coin"/>

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top"
            android:layout_toEndOf="@+id/iv_left"
            android:layout_marginTop="@dimen/y8"
            android:layout_marginStart="@dimen/x10"
            android:textSize="@dimen/x24"
            android:textColor="@color/pink_fb7ba2"
            android:text="已收到"/>

        <TextView
            android:id="@+id/tv_got_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top"
            android:layout_toEndOf="@+id/tv_left"
            android:layout_marginStart="@dimen/x4"
            android:layout_marginTop="@dimen/y8"
            android:textStyle="bold"
            android:textSize="@dimen/x24"
            android:textColor="@color/pink_fb7ba2"
            android:text="@string/label_got_coin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top"
            android:layout_toEndOf="@+id/tv_got_coin"
            android:layout_marginTop="@dimen/y8"
            android:layout_marginStart="@dimen/x4"
            android:textSize="@dimen/x24"
            android:textColor="@color/pink_fb7ba2"
            android:text="节操"/>

        <ImageView
            android:id="@+id/iv_give_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x44"
            android:src="@drawable/btn_give_coin"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y24"
        android:background="@color/white">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/indicator_person_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x10"
            android:background="@color/white"
            app:tl_iconVisible="false"
            app:tl_tab_padding="@dimen/x15"
            app:tl_indicator_height="@dimen/y8"
            app:tl_tab_space_equal="false"
            app:tl_indicator_color="@color/main_cyan"
            app:tl_textsize="@dimen/x24"
            app:tl_textSelectColor="@color/main_cyan"
            app:tl_textUnselectColor="@color/gray_d7d7d7"/>

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/x22"
            android:drawablePadding="@dimen/x6"
            android:drawableEnd="@drawable/icon_doc_comment_sort"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/x24"
            android:text="热门排序"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8"/>

</LinearLayout>