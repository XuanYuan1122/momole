<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_choice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_show_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y88"
            android:background="@color/white"
            android:gravity="center"
            android:text="显示全部"
            android:textSize="@dimen/x28"
            android:layout_gravity="center"
            android:textColor="@color/main_cyan"
            android:drawableEnd="@drawable/ic_feed_follow_select"
            android:drawablePadding="@dimen/x12"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1_px"
            android:background="@color/gray_e8e8e8"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <com.moemoe.lalala.view.widget.recycler.PullAndLoadView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.moemoe.lalala.view.widget.recycler.PullAndLoadView>
</LinearLayout>