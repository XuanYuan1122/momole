<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/y100"
        android:layout_height="@dimen/y100"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x24"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_marginStart="@dimen/x24"
        android:layout_centerVertical="true"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x30"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_remove"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y60"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/x30"
        android:textColor="@color/main_cyan"
        android:text="@string/label_remove"
        android:gravity="center"
        android:layout_marginEnd="@dimen/x24"
        android:background="@drawable/shape_rect_border_main_no_background_y12"/>
</RelativeLayout>