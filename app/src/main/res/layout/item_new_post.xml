<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_clickable"
        android:paddingBottom="12dp">

        <RelativeLayout
            android:id="@+id/rl_post_top"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_normal_holo_btn" >

            <com.moemoe.lalala.view.MyRoundedImageView
                android:id="@+id/iv_post_club"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:riv_right_bottom_radius="6dp"
                app:riv_right_top_radius="6dp"
                app:riv_left_top_radius="6dp"
                app:riv_left_bottom_radius="6dp"
                android:src="@drawable/ic_default_club_m" />

            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/iv_post_club"
                android:text="眼底未名湖"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/txt_size_title" />

            <TextView
                android:id="@+id/tv_post_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_club_name"
                android:layout_below="@+id/tv_club_name"
                android:text="2小时前"
                android:textColor="@color/gray_txt_main"
                android:textSize="@dimen/txt_size_12" />

            <ImageView
                android:id="@+id/iv_go_to_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_arrow_left" />
        </RelativeLayout>

        <View
            android:id="@+id/sep"
            style="@style/HorizontalSep"
            android:layout_below="@+id/rl_post_top" />

       <RelativeLayout
            android:id="@+id/rl_content_top"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/sep" >

            <com.moemoe.lalala.view.MyRoundedImageView
                android:id="@+id/iv_post_creator"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_default_avatar_s"
                app:rect_type="circle"/>
            
            <LinearLayout
                android:id="@+id/ll_creator_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_pants"
                 android:layout_toRightOf="@+id/iv_post_creator"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_creator_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_post_creator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:paddingRight="40dp"
                        android:singleLine="true"
                        android:text="Pff"
                        android:textColor="@color/main_title_cyan"
                        android:textSize="@dimen/txt_size_12" />

                    <RelativeLayout
                        android:id="@+id/rl_level_pack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tv_post_creator_name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp" >

                        <ImageView
                            android:id="@+id/iv_level_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#fd9f00"
                            android:src="@drawable/bg_level_mini" />

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#fd9f00"
                            android:textSize="9dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
            

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_pants"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tv_post_pants_num"
                android:src="@drawable/btn_like_normal" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_post_pants_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:text="999+"
                android:gravity="center"
                android:textColor="@color/gray_secondary"
                android:textSize="@dimen/txt_size_12" />

            <ImageView
                android:id="@+id/iv_post_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/tv_post_comment_num"
                android:src="@drawable/btn_official_comment_normal" />

            <TextView
                android:id="@+id/tv_post_comment_num"
                android:layout_width="20dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="99+"
                android:textColor="@color/gray_secondary"
                android:textSize="@dimen/txt_size_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_content_top"
            android:layout_marginLeft="12dp"
            android:text="做一份让工作"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/txt_size_15" />

        <TextView
            android:id="@+id/tv_post_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="芳文社旗下发型的越看漫画扎实xxxxxxx01年飞机额发型单片做平"
            android:textColor="@color/gray_txt_main"
            android:textSize="@dimen/txt_size_12" />

        <LinearLayout
            android:id="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_brief"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:visibility="visible"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_post_image_1"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_below="@+id/tv_post_brief"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_post_image_2"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_below="@+id/tv_post_brief"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_post_image_3"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_below="@+id/tv_post_brief"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_img_num"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/ll_image_3"
            android:layout_alignRight="@+id/ll_image_3"
            android:background="#88aaaaaa"
            android:gravity="center"
            android:text="共9张"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_doc_sep"
            android:layout_below="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="11dp"
            android:background="#d7d7d8"
            />

        <com.moemoe.lalala.view.DocLabelView
            android:layout_below="@+id/view_doc_sep"
            android:id="@+id/dv_doc_label_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:child_view_height="22dp"
            app:child_view_width="wrap_content"
            app:line_spacing="7dp"
            app:label_spacing="7dp"
            >
        </com.moemoe.lalala.view.DocLabelView>
    </RelativeLayout>

    <View
        android:id="@+id/view_flag_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>