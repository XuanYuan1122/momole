<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        app:is_auto_play="true"
        app:image_scale_type="fit_xy"
        app:indicator_height="@dimen/size_10"
        app:indicator_width="@dimen/size_10"
        app:indicator_margin="@dimen/size_10"
        app:indicator_drawable_selected="@drawable/icon_class_banner_switch_blue"
        app:indicator_drawable_unselected="@drawable/icon_class_banner_switch_white">

    </com.youth.banner.Banner>
</RelativeLayout>