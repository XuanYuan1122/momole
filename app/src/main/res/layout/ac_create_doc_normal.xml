<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f6f6f6">

    <include layout="@layout/neta_bar"/>

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/status_bar_height"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rl_content_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:paddingBottom="6dp">

                <ViewStub
                    android:id="@+id/stub_doc_title_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout="@layout/view_title_edittext"
                    android:inflatedId="@+id/doc_title_ed"/>

                <EditText
                    android:id="@+id/edt_content"
                    style="@style/EdtNormal"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:background="@drawable/bg_normal_white_btn"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="top"
                    android:scrollbars="vertical"
                    android:hint="@string/a_hint_input_content"
                    android:maxHeight="300dp"
                    android:minLines="8"
                    android:textColor="@color/gray_595e64"
                    android:textColorHint="@color/gray_c1c1c1"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:id="@+id/tv_content_rm"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/edt_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_char_num_remain"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

                <View
                    android:id="@+id/sep_content"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_f6f6f6" />

                <RelativeLayout
                    android:id="@+id/rl_add_img_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_label_can_pick_icon_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:text="@string/label_doc_only_9_photos"
                        android:textColor="@color/gray_929292"
                        android:textSize="@dimen/size_12" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_img"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/tv_label_can_pick_icon_num"
                        android:visibility="visible">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>

                <ViewStub
                    android:id="@+id/stub_doc_add_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout="@layout/view_add_label"
                    android:inflatedId="@+id/doc_add_label"/>
            </LinearLayout>

            <ViewStub
                android:id="@+id/stub_doc_add_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/doc_add_music"
                android:layout_below="@+id/rl_content_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout="@layout/view_add_doc_music"/>

            <ViewStub
                android:id="@+id/stub_doc_add_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl_content_input"
                android:layout="@layout/view_doc_add_extend"
                android:inflatedId="@+id/add_hide_doc"/>

        </RelativeLayout>
    </ScrollView>

    <ViewStub
        android:id="@+id/stub_doc_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/doc_keyboard"
        android:layout_alignParentBottom="true"
        android:layout="@layout/view_no_pic_keyboard"/>
</RelativeLayout>