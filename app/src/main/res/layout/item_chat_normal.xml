<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginTop="@dimen/size_6"
        android:src="@drawable/bg_default_circle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/size_6"
        android:layout_marginLeft="@dimen/size_6"
        android:src="@drawable/privately_dialog_l"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_8"
        android:paddingStart="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginRight="96dp"
        android:layout_marginEnd="96dp"
        android:textSize="@dimen/size_14"
        android:textColor="@color/black"
        android:background="@drawable/shape_white_8" />
</LinearLayout>