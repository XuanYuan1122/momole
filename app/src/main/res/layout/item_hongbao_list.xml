<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_hongbao_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y204">

    <ImageView
        android:layout_width="@dimen/x234"
        android:layout_height="@dimen/y172"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/x16"
        android:src="@drawable/ic_feed_redbag"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y24"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_hongbao_coin"
            android:layout_width="@dimen/x284"
            android:layout_height="@dimen/y80"
            android:gravity="center"
            android:textSize="@dimen/x48"
            android:textStyle="bold"
            android:text="@string/label_hongbao_total_coin"
            android:background="@drawable/shape_white_background_y40"/>

        <TextView
            android:id="@+id/tv_left_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x36"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/y12" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x24" />
    </LinearLayout>
</LinearLayout>