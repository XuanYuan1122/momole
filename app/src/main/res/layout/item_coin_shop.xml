<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y248"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_commodity"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginStart="@dimen/x24"/>

    <TextView
        android:id="@+id/tv_commodity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_commodity"
        android:textStyle="bold"
        android:textColor="@color/black_1e1e1e"
        android:textSize="@dimen/x36"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginTop="@dimen/y32"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_commodity_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_commodity_title"
        android:layout_below="@+id/tv_commodity_title"
        android:layout_marginTop="@dimen/y16"
        android:textSize="@dimen/x20"
        android:textColor="@color/gray_929292"
        android:maxLines="2" />

    <TextView
        android:id="@+id/tv_commodity_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_commodity_title"
        android:layout_above="@+id/tv_commodity_num_desc"
        android:layout_marginBottom="@dimen/y8"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x20"/>

    <TextView
        android:id="@+id/tv_commodity_num_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_commodity_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:maxLines="1"
        android:textColor="@color/main_cyan"
        android:textSize="@dimen/x20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_e8e8e8"/>
    
    <TextView
        android:id="@+id/tv_commodity_buy"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/y70"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/y24"
        android:layout_marginEnd="@dimen/x24"
        android:textColor="@color/txt_white_gray"
        android:textSize="@dimen/x24"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/btn_coin_shop_buy"/>

</RelativeLayout>