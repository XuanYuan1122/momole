<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:background="@drawable/bg_normal_white_btn">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/y100"
        android:layout_height="@dimen/y100"
        android:layout_marginStart="@dimen/x20"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_inform_notice" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_img"
        android:maxLines="1"
        android:text="系统通知"
        android:textColor="@color/black"
        android:textSize="@dimen/x30" />

    <ImageView
        android:id="@+id/iv_red_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_arrow"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_inform_reddot"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_array_right_gray"
        android:layout_marginEnd="@dimen/x20"/>
</RelativeLayout>