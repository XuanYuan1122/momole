<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginStart="@dimen/size_18"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_dash_mid">


        <ImageView
            android:id="@+id/iv_doc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18"
            android:layout_marginStart="@dimen/size_18"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/size_18"
            android:layout_marginEnd="@dimen/size_18"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_18"
            android:scaleType="fitXY">
        </ImageView>

        <com.moemoe.lalala.view.widget.longimage.LongImageView
            android:id="@+id/iv_doc_long_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18"
            android:layout_marginStart="@dimen/size_18"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/size_18"
            android:layout_marginEnd="@dimen/size_18"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_18"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
