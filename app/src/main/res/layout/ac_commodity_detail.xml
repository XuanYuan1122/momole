<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/neta_bar"/>

    <RelativeLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_below="@+id/include_toolbar">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12"
            android:padding="@dimen/size_12"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:background="@color/alph_80"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_point_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fl_top">

        <LinearLayout
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <View
            android:id="@+id/view_pressed_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/icon_class_banner_switch_blue"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commodity_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fl_top"
        android:layout_marginTop="54dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_refresh_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_12"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_commodity_num"
        android:layout_marginTop="@dimen/size_8"
        android:textColor="@color/gray_929292"/>

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="130dp"
        android:layout_height="@dimen/size_45"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15"
        android:gravity="center"
        android:background="@drawable/shape_rect_border_pink_background_4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"/>
</RelativeLayout>