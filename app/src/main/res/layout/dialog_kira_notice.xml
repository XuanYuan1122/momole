<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/y48"
    android:paddingBottom="@dimen/y48"
    android:paddingStart="@dimen/x32"
    android:paddingEnd="@dimen/x32"
    android:background="@drawable/bg_rect_corner_white_5">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x30"
        android:lineSpacingExtra="@dimen/x15"/>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/main_cyan"
        android:paddingTop="@dimen/y16"
        android:paddingBottom="@dimen/y16"
        android:gravity="center"
        android:layout_marginTop="@dimen/y48"
        android:textSize="@dimen/x36"/>
</LinearLayout>