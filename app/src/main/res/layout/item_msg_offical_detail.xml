<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y20"
    android:layout_marginStart="@dimen/x20"
    android:layout_marginEnd="@dimen/x20"
    android:paddingTop="@dimen/y24"
    android:paddingStart="@dimen/x20"
    android:paddingEnd="@dimen/x20"
    android:paddingBottom="@dimen/y24"
    android:background="@drawable/shape_gray_f6f6f6_5">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x24"
        android:textColor="@color/gray_929292"
        />

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_cyan"
        android:textSize="@dimen/x24"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/y20"
        android:text="点击查看"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_d7d7d7"
        android:textSize="@dimen/x24"
        android:layout_alignBottom="@+id/tv_watch"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>