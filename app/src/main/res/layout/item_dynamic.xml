<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/size_18">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_border_gray">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/tv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_65"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_bag_cover" />

        <TextView
            android:id="@+id/tv_mark"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_24"
            android:background="@drawable/shape_rect_zonghe"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16"
            android:layout_above="@+id/tv_extra"
            android:paddingLeft="@dimen/size_6"
            android:paddingRight="@dimen/size_6"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/size_4" />

        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/size_12"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/size_6"
            android:paddingRight="@dimen/size_6"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/size_7"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_d7d7d7"
            android:textSize="@dimen/size_12"
            android:text="by"/>

        <TextView
            android:id="@+id/tv_create_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/main_cyan"
            android:textSize="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginStart="@dimen/size_4"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12"
            android:textColor="@color/gray_d7d7d7"/>
    </LinearLayout>
</LinearLayout>