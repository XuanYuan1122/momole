<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            app:contentScrim="@color/white"
            app:title=""
            app:expandedTitleMarginEnd="@dimen/size_18"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleGravity="right|bottom|end"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/iv_background"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_default_square" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/icon_blackboard_mask2"
                        android:alpha="0.4"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_blackboard_mask"
                        android:layout_alignBottom="@+id/iv_background"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_use_space"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/size_18"
                        android:layout_marginEnd="@dimen/size_18"
                        android:layout_marginRight="@dimen/size_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp"/>

                    <TextView
                        android:id="@+id/tv_use_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10"
                        android:text="@string/label_bag_space"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="@dimen/size_18"
                        android:layout_marginRight="@dimen/size_18"/>

                </RelativeLayout>

                <ViewStub
                    android:id="@+id/stub_folder_user_root"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout="@layout/view_folder_user_root"
                    android:inflatedId="@+id/folder_user_root"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/neta_toolbar"
                app:navigationIcon="@drawable/btn_back_white_normal"
                app:layout_collapseMode="pin"
                android:layout_marginTop="@dimen/status_bar_height"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="选择"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:paddingRight="@dimen/size_18"
                    android:paddingEnd="@dimen/size_18"
                    android:paddingLeft="@dimen/size_18"
                    android:paddingStart="@dimen/size_18"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_menu_list"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:paddingRight="@dimen/size_18"
                    android:paddingStart="@dimen/size_18"
                    android:paddingLeft="@dimen/size_18"
                    android:paddingEnd="@dimen/size_18"
                    android:src="@drawable/btn_menu_white_normal" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/fl_add_item_root"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:background="@drawable/shape_main_no_background_stroke_2_corner_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bag_add_file"
                android:layout_gravity="center"
                android:text="添加内容"
                android:textSize="@dimen/size_15"
                android:textColor="@color/main_cyan"
                android:drawablePadding="@dimen/size_4" />
        </FrameLayout>

        <com.moemoe.lalala.view.widget.recycler.PullAndLoadView
            android:id="@+id/rv_bag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.moemoe.lalala.view.widget.recycler.PullAndLoadView>
    </LinearLayout>

    <ViewStub
        android:id="@+id/stub_buy_bottom_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_gravity="bottom"
        android:layout="@layout/view_folder_buy_bottom"
        android:inflatedId="@+id/buy_bottom_root"/>

    <ViewStub
        android:id="@+id/stub_open_bag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/view_bag_open_root"
        android:inflatedId="@+id/open_bag"/>

</android.support.design.widget.CoordinatorLayout>