<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/main_cyan"
            app:contentScrim="@color/main_cyan"
            app:title="伊藤诚的书包"
            app:expandedTitleMarginEnd="@dimen/size_18"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleGravity="right|bottom|end"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/iv_background"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_default_square"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/icon_blackboard_mask2"
                        android:alpha="0.4"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_blackboard_mask"
                        android:layout_alignBottom="@+id/iv_background"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_use_space"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/size_18"
                        android:layout_marginEnd="@dimen/size_18"
                        android:layout_marginRight="@dimen/size_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp"/>

                    <TextView
                        android:id="@+id/tv_use_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10"
                        android:text="@string/label_bag_space"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="@dimen/size_18"
                        android:layout_marginRight="@dimen/size_18"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_user_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_10"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40" />

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_929292"
                        android:text="来自"
                        android:textSize="@dimen/size_12"
                        android:layout_marginStart="@dimen/size_8"
                        android:layout_marginLeft="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_6"
                        android:layout_toRightOf="@+id/iv_avatar"
                        android:layout_toEndOf="@+id/iv_avatar"/>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_from"
                        android:layout_alignStart="@+id/tv_from"
                        android:layout_below="@+id/tv_from"
                        android:textSize="@dimen/size_16"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_rect_label_main"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="更多"/>
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_go_back"
                app:layout_collapseMode="pin"
                android:layout_marginTop="@dimen/status_bar_height"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16"
                    android:paddingRight="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_menu_list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_menu_loli" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/fl_add_item_root"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:background="@drawable/shape_main_no_background_stroke_2_corner_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bag_add_file"
                android:layout_gravity="center"
                android:text="添加内容"
                android:textSize="@dimen/size_15"
                android:textColor="@color/main_cyan"
                android:drawablePadding="@dimen/size_4"
            />
        </FrameLayout>

        <com.moemoe.lalala.view.widget.recycler.PullAndLoadView
            android:id="@+id/rv_bag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.moemoe.lalala.view.widget.recycler.PullAndLoadView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_buy_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_gravity="bottom"
        android:background="@color/pink_fb7ba2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:textStyle="bold"
                android:text="25节操"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_buy_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_70"
                android:layout_gravity="center"
                android:textSize="@dimen/size_10"
                android:text="购买后将收录在收藏夹内"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_is_bag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/status_bar_height"
            android:src="@drawable/ic_go_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_15"
            android:src="@drawable/ic_bag_login"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="是否领取你的书包?"/>

        <TextView
            android:id="@+id/tv_get_bag"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect_label_pink"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"
            android:gravity="center"
            android:text="领取"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>