<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_normal_white_btn" >

    <ImageView
        android:id="@+id/iv_creator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_default_circle" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/iv_creator"
        android:layout_toEndOf="@+id/iv_creator"
        android:maxLines="1"
        android:text="古河渚"
        android:textColor="@color/black"
        android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            android:text="07-01"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/gray_929292"
            android:textSize="12dp"
            android:visibility="visible" />

        <View
            android:id="@+id/sep"
            style="@style/HorizontalSep"
            android:layout_alignLeft="@+id/iv_creator"
            android:layout_below="@+id/iv_creator"
            android:visibility="gone"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/tv_doc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_creator"
            android:layout_below="@+id/sep"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/tv_club_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/txt_dark_gray"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/tv_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_doc_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="社团名字字I自自在"
            android:textColor="@color/main_cyan"
            android:visibility="gone"
            android:textSize="@dimen/size_12" />

</RelativeLayout>