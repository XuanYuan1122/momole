<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:background="@drawable/bg_normal_white_btn" >

    <ImageView
        android:id="@+id/iv_creator"
        android:layout_width="@dimen/y100"
        android:layout_height="@dimen/y100"
        android:layout_marginStart="@dimen/x20"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_default_circle" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y32"
        android:layout_toEndOf="@+id/iv_creator"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/x30" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/x20"
        android:text=""
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x24" />

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="@dimen/y32"
        android:layout_height="@dimen/y32"
        android:layout_below="@+id/tv_date"
        android:layout_alignEnd="@+id/tv_date"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@color/white"
        android:textSize="@dimen/x16"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/shape_red_8"
        android:text=""/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/y10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/x24"
        android:visibility="visible" />

    <View
        android:id="@+id/sep"
        style="@style/HorizontalSep"
        android:layout_alignStart="@+id/iv_creator"
        android:layout_below="@+id/iv_creator"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y14" />

    <TextView
        android:id="@+id/tv_doc_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_creator"
        android:layout_below="@+id/sep"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:layout_toStartOf="@+id/tv_club_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/txt_dark_gray"
        android:textSize="@dimen/x24" />

    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_doc_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/main_cyan"
        android:visibility="gone"
        android:textSize="@dimen/x24" />

</RelativeLayout>