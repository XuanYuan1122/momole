<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_post_root"
    android:layout_marginTop="@dimen/size_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_normal_white_btn">

    <include layout="@layout/item_doc_main_top"/>

    <RelativeLayout
        android:id="@+id/rl_user_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_68"
        android:padding="@dimen/size_12">

        <ImageView
            android:id="@+id/iv_post_creator"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/bg_default_circle" />

        <RelativeLayout
            android:id="@+id/rl_level_pack"
            android:layout_width="26dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/iv_post_creator"
            android:layout_alignLeft="@+id/iv_post_creator"
            android:layout_alignStart="@+id/iv_post_creator"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:padding="@dimen/size_1"
            android:background="@drawable/shape_white_5">

            <RelativeLayout
                android:id="@+id/rl_level_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_green_10">

                <TextView
                    android:id="@+id/tv_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_4"
                    android:layout_marginStart="@dimen/size_4"
                    android:textSize="@dimen/size_5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/tv_level"
                    android:text="LV"/>

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/size_2"
                    android:layout_marginStart="@dimen/size_2"
                    android:layout_toRightOf="@+id/tv_lv"
                    android:layout_toEndOf="@+id/tv_lv"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_7"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_post_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_post_creator"
            android:layout_toEndOf="@+id/iv_post_creator"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black_1e1e1e"
            android:textStyle="bold"
            android:textSize="@dimen/size_16" />

        <FrameLayout
            android:id="@+id/fl_huizhang_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_alignTop="@+id/tv_post_creator_name"
            android:layout_toRightOf="@+id/tv_post_creator_name"
            android:layout_toEndOf="@+id/tv_post_creator_name"
            android:layout_marginTop="@dimen/size_1"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_huizhang_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size_8"
                android:textStyle="bold"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_4"
                android:paddingStart="@dimen/size_4"
                android:paddingEnd="@dimen/size_4"
                android:paddingRight="@dimen/size_4"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_huizhang_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_alignBottom="@+id/fl_huizhang_1"
            android:layout_toRightOf="@+id/fl_huizhang_1"
            android:layout_toEndOf="@+id/fl_huizhang_1"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_huizhang_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size_8"
                android:textStyle="bold"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_4"
                android:paddingStart="@dimen/size_4"
                android:paddingEnd="@dimen/size_4"
                android:paddingRight="@dimen/size_4"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_huizhang_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_alignBottom="@+id/fl_huizhang_2"
            android:layout_toRightOf="@+id/fl_huizhang_2"
            android:layout_toEndOf="@+id/fl_huizhang_2"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_huizhang_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size_8"
                android:textStyle="bold"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_4"
                android:paddingStart="@dimen/size_4"
                android:paddingEnd="@dimen/size_4"
                android:paddingRight="@dimen/size_4"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_post_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_post_creator_name"
            android:layout_alignStart="@+id/tv_post_creator_name"
            android:layout_alignBottom="@+id/iv_post_creator"
            android:layout_marginBottom="@dimen/size_4"
            android:text=""
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/size_10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginStart="@dimen/size_12"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black_1e1e1e"
        android:textSize="18dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_post_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginBottom="@dimen/size_10"
        android:ellipsize="end"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/gray_444444"
        android:textSize="@dimen/size_15"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/size_15"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_12"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

    <com.moemoe.lalala.view.widget.view.DocLabelView
        android:layout_below="@+id/view_doc_sep"
        android:id="@+id/dv_doc_label_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="@dimen/size_12"
        app:child_view_height="22dp"
        app:child_view_width="wrap_content"
        app:line_spacing="7dp"
        app:label_spacing="7dp"
        android:visibility="gone">
    </com.moemoe.lalala.view.widget.view.DocLabelView>

    <include layout="@layout/item_doc_main_bottom"/>
</LinearLayout>