<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_post_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_normal_btn"
        android:paddingBottom="12dp" >

        <RelativeLayout
            android:id="@+id/rl_content_top"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/sep" >

            <com.moemoe.lalala.view.MyRoundedImageView
                android:id="@+id/iv_post_creator"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_default_avatar_m"
                app:rect_type="circle"/>

            <ImageView
                android:id="@+id/iv_post_owner_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_post_creator"
                android:layout_alignLeft="@+id/iv_post_creator"
                android:layout_alignRight="@+id/iv_post_creator"
                android:layout_alignTop="@+id/iv_post_creator"
                android:layout_marginBottom="-8dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="-2dp"
                android:scaleType="fitXY"
                android:src="@drawable/sign_owner_avatar_big"
                android:visibility="visible" />

          <LinearLayout
                android:id="@+id/ll_creator_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/rl_doc_like_pack"
                android:layout_toRightOf="@+id/iv_post_creator"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_creator_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_post_creator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:paddingRight="40dp"
                        android:singleLine="true"
                        android:text="Pff"
                        android:textColor="@color/txt_creator"
                        android:textSize="@dimen/txt_size_main" />

                    <RelativeLayout
                        android:id="@+id/rl_level_pack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tv_post_creator_name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp" >

                        <ImageView
                            android:id="@+id/iv_level_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#fd9f00"
                            android:src="@drawable/bg_level_mini" />

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#fd9f00"
                            android:textSize="9dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
	     
            <TextView
                android:id="@+id/tv_post_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/ll_creator_pack"
                android:layout_below="@+id/ll_creator_pack"
                android:text="2小时前"
                android:textColor="@color/gray_txt_main"
                android:textSize="@dimen/txt_size_secondary" />

            <LinearLayout
                android:id="@+id/rl_doc_like_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_post_creator"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_pants"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/btn_like_normal" />

                <TextView
                    android:id="@+id/tv_post_pants_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="14dp"
                    android:text="999+"
                    android:textColor="@color/gray_txt_main"
                    android:textSize="@dimen/txt_size_secondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_doc_comment_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/rl_doc_like_pack"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingLeft="2dp" >

                <ImageView
                    android:id="@+id/iv_post_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_official_comment_normal" />

                <TextView
                    android:id="@+id/tv_post_comment_num"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="99+"
                    android:textColor="@color/gray_txt_main"
                    android:textSize="@dimen/txt_size_secondary" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_doc_top_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_sticky_post"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_content_top"
            android:layout_marginLeft="12dp"
            android:text="做一份让工作"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/txt_size_main"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_post_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:maxLines="8"
            android:text="芳文社旗下发型的越看漫画扎实xxxxxxx01年飞机额发型单片做平"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/txt_size_main" />

        <LinearLayout
            android:id="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_brief"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_post_special_flag"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/main_title_cyan" >

                <ImageView
                    android:id="@+id/iv_post_flag_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vote" />

                <TextView
                    android:id="@+id/tv_post_vote_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_doc_vote_nums"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_mini" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_1_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_2_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_3_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_img_num"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/ll_image_3"
            android:layout_alignRight="@+id/ll_image_3"
            android:background="#88aaaaaa"
            android:gravity="center"
            android:text="共9张"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/view_flag_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>