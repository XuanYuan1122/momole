<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/neta_toolbar"
    android:background="@drawable/bg_shadow_up">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/size_18"
        android:paddingStart="@dimen/size_18"
        android:paddingEnd="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_back_blue_normal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/size_18"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textColor="@color/black_1e1e1e"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_toEndOf="@+id/iv_back"
        android:text=""/>

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/black_1e1e1e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text=""
            android:layout_gravity="end"
            android:textColor="@color/main_cyan"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_menu_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_menu_normal"
            android:paddingRight="@dimen/size_18"
            android:paddingEnd="@dimen/size_18"
            android:paddingLeft="@dimen/size_12"
            android:paddingStart="@dimen/size_12"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>