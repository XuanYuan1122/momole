<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_up"
    android:paddingTop="@dimen/status_bar_height">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/neta_toolbar"
        android:paddingLeft="@dimen/size_8"
        android:paddingStart="@dimen/size_8"
        android:paddingRight="@dimen/size_18"
        android:paddingEnd="@dimen/size_18">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/size_10"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back_blue_normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_18"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1e1e1e"
            android:layout_toRightOf="@+id/iv_back"
            android:paddingLeft="@dimen/size_10"
            android:text=""/>

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/black_1e1e1e"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_menu_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_menu_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text=""
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>