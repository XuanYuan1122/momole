<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:background="@drawable/bg_shadow_up">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/size_18"
        android:paddingEnd="@dimen/size_10"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_back_blue_normal"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_left_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_toEndOf="@+id/iv_back"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_18"
            android:gravity="center_vertical"
            android:textColor="@color/black_1e1e1e"
            android:text=""/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_cyan"
                android:layout_marginRight="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_8"
                android:textSize="@dimen/size_9"
                android:visibility="gone"
                android:text=""/>

            <TextView
                android:id="@+id/tv_left_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink_fb7ba2"
                android:textSize="@dimen/size_9"
                android:visibility="gone"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/black_1e1e1e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_tv_menu_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_right_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_cyan"
                android:gravity="center"
                android:textSize="18dp"
                android:text=""
                android:layout_marginEnd="@dimen/size_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text=""
                android:gravity="center"
                android:textColor="@color/main_cyan"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/btn_bag_pic_big_noraml"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_menu_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_menu_normal"
            android:paddingEnd="@dimen/size_18"
            android:paddingStart="@dimen/size_12"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>