<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <include layout="@layout/app_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">



    <RelativeLayout
        android:id="@+id/rl_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_rect_corner_while"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp" >

        <EditText
            android:id="@+id/edt_title"
            style="@style/EdtNormal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/a_hint_input_title"
            android:minLines="1"
            android:textColor="@color/txt_gray_red"
            android:textColorHint="@color/gray_secondary"
            android:textSize="@dimen/txt_size_main"
            android:visibility="gone" />

        <View
            android:id="@+id/sep"
            style="@style/HorizontalSep"
            android:layout_below="@+id/edt_title"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_content"
            style="@style/EdtNormal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/sep"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/a_hint_input_content"
            android:maxHeight="300dp"
            android:minLines="8"
            android:textColor="@color/gray_main"
            android:textColorHint="@color/gray_secondary"
            android:textSize="@dimen/txt_size_main" />

        <TextView
            android:id="@+id/tv_content_rm"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edt_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_char_num_remain"
            android:gravity="center"
            android:text="500"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_content_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_add_photo"
        android:visibility="visible" />

    <HorizontalScrollView
        android:id="@+id/hoscroll_doc_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_content_input"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="gone" >

       <LinearLayout
            android:id="@+id/ll_doc_icons_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_add_photo_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_add_photo" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_label_can_pick_icon_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_content_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="@string/label_doc_only_9_photos"
        android:textColor="@color/gray_txt_main"
        android:textSize="@dimen/txt_size_main" />
    </RelativeLayout>
</LinearLayout>