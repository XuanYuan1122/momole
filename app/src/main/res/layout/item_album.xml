<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >

    <ImageView
        android:id="@+id/iv_album_image"
        android:layout_width="@dimen/y160"
        android:layout_height="@dimen/y160"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_album_border"
        android:paddingBottom="@dimen/y10"
        android:paddingEnd="@dimen/x10"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x10"
        android:layout_toEndOf="@+id/iv_album_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_album_name"
            style="@style/TxtMainDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tv_album_count"
            style="@style/TxtSecondGary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_595e64"
            android:textSize="@dimen/x26" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_album_select_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x10"
        android:src="@drawable/ic_select_hover" />

</RelativeLayout>