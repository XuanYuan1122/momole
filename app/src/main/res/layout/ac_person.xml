<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ac_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/gray_383d40"
            app:tl_iconVisible="false"
            app:tl_textBold="BOTH"
            app:tl_indicator_width="40dp"
            app:tl_indicator_height="@dimen/size_5"
            app:tl_indicator_color="@color/orange_fd9f00"
            app:tl_textsize="15dp"
            app:tl_textSelectColor="@color/orange_fd9f00"
            app:tl_textUnselectColor="@color/white_50"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout">

        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/main_cyan"
            app:contentScrim="@color/main_cyan"
            app:title=""
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_default_square"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_blackboard_mask"
                    android:layout_alignBottom="@+id/iv_background"
                    android:scaleType="fitXY"/>

                <FrameLayout
                    android:id="@+id/fl_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/status_bar_height"
                    android:paddingTop="@dimen/size_18">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fl_avatar"
                    android:layout_toEndOf="@+id/fl_avatar"
                    android:layout_alignBottom="@+id/fl_avatar"
                    android:layout_marginLeft="@dimen/size_5"
                    android:layout_marginStart="@dimen/size_5"
                    android:src="@drawable/ic_personal_bag"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_22"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/fl_avatar"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_22"
                        android:layout_alignTop="@+id/tv_name"
                        android:layout_toRightOf="@+id/tv_name"
                        android:layout_toEndOf="@+id/tv_name"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_3"
                        android:layout_marginStart="@dimen/size_3"
                        android:src="@drawable/ic_girl"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/tv_fans_num"
                        android:layout_toLeftOf="@+id/tv_fans_num"
                        android:layout_toStartOf="@+id/tv_fans_num"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        android:text="@string/label_fans"/>

                    <TextView
                        android:id="@+id/tv_fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignTop="@+id/view_sep_1"
                        android:layout_toLeftOf="@+id/view_sep_1"
                        android:layout_toStartOf="@+id/view_sep_1"
                        android:textSize="@dimen/size_12"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5"/>


                    <View
                        android:id="@+id/view_sep_1"
                        android:layout_width="@dimen/size_1"
                        android:layout_height="18dp"
                        android:background="@color/white"
                        android:layout_alignTop="@+id/ll_tv_doc_num"
                        android:layout_toLeftOf="@+id/ll_tv_doc_num"
                        android:layout_toStartOf="@+id/ll_tv_doc_num"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"/>

                <LinearLayout
                    android:id="@+id/ll_tv_doc_num"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_doc_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        android:text="@string/label_my_doc"/>

                    <TextView
                        android:id="@+id/tv_doc_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_12"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5" />
                </LinearLayout>

                    <View
                        android:id="@+id/view_sep_2"
                        android:layout_width="@dimen/size_1"
                        android:layout_height="18dp"
                        android:background="@color/white"
                        android:layout_alignTop="@+id/ll_tv_doc_num"
                        android:layout_toRightOf="@+id/ll_tv_doc_num"
                        android:layout_toEndOf="@+id/ll_tv_doc_num"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5"/>

                    <TextView
                        android:id="@+id/tv_coin_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/view_sep_2"
                        android:layout_toRightOf="@+id/view_sep_2"
                        android:layout_toEndOf="@+id/view_sep_2"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        android:text="@string/label_my_coin"/>

                    <TextView
                        android:id="@+id/tv_coin_num"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignTop="@+id/tv_coin_num_title"
                        android:layout_toRightOf="@+id/tv_coin_num_title"
                        android:layout_toEndOf="@+id/tv_coin_num_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginStart="@dimen/size_5" />

                <LinearLayout
                    android:id="@+id/ll_follow_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/iv_background"
                    android:layout_marginBottom="@dimen/size_6"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tv_private_msg"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_30"
                        android:background="@drawable/shape_rect_border_white_no_background_6"
                        android:textSize="@dimen/size_15"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/size_8"
                        android:layout_marginEnd="@dimen/size_8"
                        android:text="私信"/>

                    <TextView
                        android:id="@+id/tv_follow"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_30"
                        android:background="@drawable/btn_rect_corner_cyan_6"
                        android:text="@string/label_follow"
                        android:textColor="@color/txt_white_cyan"
                        android:textSize="@dimen/size_15"
                        android:gravity="center"
                        android:visibility="visible"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_background"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/size_12"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_marginEnd="@dimen/size_12"
                    android:src="@drawable/btn_cardbg_edit"
                    android:visibility="gone"/>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_go_back"
                app:layout_collapseMode="pin"
                android:layout_marginTop="@dimen/status_bar_height"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <ImageView
                    android:id="@+id/iv_menu_list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_menu_loli" />

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="16"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text=""
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="@color/white"
                android:gravity="center"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>