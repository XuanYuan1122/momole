<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:src="@drawable/btn_trash_exit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dust_get_anim"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_dust_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_spitball_paper"
            android:visibility="visible">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/gray_txt_main"
                android:textColorHint="@color/setting_gray"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:background="@null"
                android:hint="标题:"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/gray_txt_main"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/gray_txt_main"
                android:textColorHint="@color/setting_gray"
                android:textSize="@dimen/txt_size_secondary"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginTop="7dp"
                android:gravity="top"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:lines="4"
                android:hint="内容:"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/gray_txt_main"
                android:textSize="@dimen/txt_size_secondary"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_rect_corner_dust_pressed"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12dp"
            android:text="算了我害羞"/>

        <TextView
            android:id="@+id/tv_get"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/bg_rect_corner_dust_pressed"
            android:text="去吧小纸团"/>
    </LinearLayout>

</LinearLayout>