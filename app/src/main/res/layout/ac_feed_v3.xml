<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x36"
            android:paddingRight="@dimen/x36"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back_blue_normal_unity"/>

        <com.moemoe.lalala.view.widget.view.KiraTabLayout
            android:id="@+id/indicator_person_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:tl_textBold="BOTH"
            app:tl_text_size="@dimen/x36"
            app:tl_indicator_width="@dimen/x88"
            app:tl_indicator_height="@dimen/y8"
            app:tl_indicator_corner_radius="@dimen/y4"
            app:tl_indicator_color="@color/main_cyan"
            app:tl_textSelectColor="@color/main_cyan"
            app:tl_textUnSelectColor="@color/main_cyan_50"
            app:tl_tab_width="@dimen/x136"
            app:tl_dot_bg_color="@color/main_red"
            app:tl_dot_text_color="@color/white"
            app:tl_dot_width="@dimen/y28"
            app:tl_dot_text_size="@dimen/x16"/>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x36"
            android:src="@drawable/btn_trends_inform"/>

        <TextView
            android:id="@+id/tv_msg_dot"
            android:layout_width="@dimen/y28"
            android:layout_height="@dimen/y28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x14"
            android:textSize="@dimen/x16"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/ic_inform_reddot_big"
            android:layout_marginTop="@dimen/y24"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>