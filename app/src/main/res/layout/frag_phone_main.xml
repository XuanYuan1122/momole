<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x52"
    android:paddingRight="@dimen/x52"
    android:paddingTop="@dimen/y48"
    android:background="@drawable/bg_phone_wallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_menu_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_menu" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="通讯录"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_msg_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="消息"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mate_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_mate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="同桌"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y36"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_album_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_album" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="相簿"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ticket_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_ticket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="鼓励券"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alarm_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="提醒"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y36"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_shop_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_shop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="商店"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x132"
                android:layout_height="@dimen/y132"
                android:src="@drawable/btn_phone_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:text="搜索"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x132"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>