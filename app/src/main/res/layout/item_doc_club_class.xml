<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_post_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_doc_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_normal_white_btn" >

        <RelativeLayout
            android:id="@+id/rl_content_top"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/iv_post_creator"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/bg_default_circle" />

            <RelativeLayout
                android:id="@+id/rl_level_pack"
                android:layout_width="26dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/iv_post_creator"
                android:layout_alignLeft="@+id/iv_post_creator"
                android:layout_alignStart="@+id/iv_post_creator"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:padding="@dimen/size_1"
                android:background="@drawable/shape_white_10">

                <RelativeLayout
                    android:id="@+id/rl_level_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_green_10">

                    <TextView
                        android:id="@+id/tv_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_4"
                        android:layout_marginStart="@dimen/size_4"
                        android:textSize="@dimen/size_5"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_alignBottom="@+id/tv_level"
                        android:text="LV"/>

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/size_2"
                        android:layout_marginStart="@dimen/size_2"
                        android:layout_toRightOf="@+id/tv_lv"
                        android:layout_toEndOf="@+id/tv_lv"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_7"/>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_post_owner_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_post_creator"
                android:layout_alignLeft="@+id/iv_post_creator"
                android:layout_alignRight="@+id/iv_post_creator"
                android:layout_alignTop="@+id/iv_post_creator"
                android:layout_marginBottom="-7dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="-2dp"
                android:scaleType="fitXY"
                android:src="@drawable/sign_owner_avatar_big"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_post_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_post_creator"
                android:layout_toEndOf="@+id/iv_post_creator"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/txt_creator"
                android:textSize="@dimen/size_15" />

            <FrameLayout
                android:id="@+id/fl_huizhang_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_alignTop="@+id/tv_post_creator_name"
                android:layout_toRightOf="@+id/tv_post_creator_name"
                android:layout_toEndOf="@+id/tv_post_creator_name"
                android:layout_marginTop="@dimen/size_1"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_huizhang_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_8"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_4"
                    android:paddingStart="@dimen/size_4"
                    android:paddingEnd="@dimen/size_4"
                    android:paddingRight="@dimen/size_4"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_huizhang_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_alignBottom="@+id/fl_huizhang_1"
                android:layout_toRightOf="@+id/fl_huizhang_1"
                android:layout_toEndOf="@+id/fl_huizhang_1"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_huizhang_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_8"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_4"
                    android:paddingStart="@dimen/size_4"
                    android:paddingEnd="@dimen/size_4"
                    android:paddingRight="@dimen/size_4"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_huizhang_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_alignBottom="@+id/fl_huizhang_2"
                android:layout_toRightOf="@+id/fl_huizhang_2"
                android:layout_toEndOf="@+id/fl_huizhang_2"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_huizhang_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_8"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_4"
                    android:paddingStart="@dimen/size_4"
                    android:paddingEnd="@dimen/size_4"
                    android:paddingRight="@dimen/size_4"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_post_creator_name"
                android:layout_below="@+id/tv_post_creator_name"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp">


                <LinearLayout
                    android:id="@+id/rl_doc_like_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/rl_doc_comment_pack"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_pants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_official_jc_small_normal" />

                    <TextView
                        android:id="@+id/tv_post_pants_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:text="99+"
                        android:layout_marginRight="14dp"
                        android:textColor="@color/main_cyan"
                        android:textSize="@dimen/size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_doc_comment_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:paddingLeft="2dp" >

                    <ImageView
                        android:id="@+id/iv_post_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_official_comment_normal" />

                    <TextView
                        android:id="@+id/tv_post_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:maxLines="1"
                        android:text="99+"
                        android:textColor="@color/green_93d856"
                        android:textSize="@dimen/size_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_post_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="2小时前"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/size_12" />
            </RelativeLayout>



        </RelativeLayout>

        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_content_top"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="做一份让工作"
            android:textColor="@color/dark_gray"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_post_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="8"
            android:text="芳文社旗下发型的越看漫画扎实xxxxxxx01年飞机额发型单片做平"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/size_15" />

        <LinearLayout
            android:id="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_brief"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_music_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f6f6">

                <ImageView
                    android:id="@+id/iv_item_image"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />

                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_video_play"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_music_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[galgame] 妻みぐい3 度盘 2.56G"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/iv_item_image"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_special_flag"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/main_cyan" >

                <ImageView
                    android:id="@+id/iv_post_flag_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vote" />

                <TextView
                    android:id="@+id/tv_post_vote_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_doc_vote_nums"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_1_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_2_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_post_image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_post_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_post_image_3_gif_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sign_gif" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_img_num"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/ll_image_3"
            android:layout_alignRight="@+id/ll_image_3"
            android:background="#88aaaaaa"
            android:gravity="center"
            android:text="共9张"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />
        
        <View 
            android:layout_below="@+id/ll_image_3"
            android:id="@+id/view_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_doc_sep"
            android:layout_below="@+id/ll_image_3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="11dp"
            android:background="#d7d7d8"
            />

        <com.moemoe.lalala.view.widget.view.DocLabelView
            android:layout_below="@+id/view_doc_sep"
            android:id="@+id/dv_doc_label_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:child_view_height="22dp"
            app:child_view_width="wrap_content"
            app:line_spacing="7dp"
            app:label_spacing="7dp"
            >
        </com.moemoe.lalala.view.widget.view.DocLabelView>
    </RelativeLayout>
</RelativeLayout>