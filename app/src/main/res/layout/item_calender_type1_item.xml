<?xml version="1.0" encoding="utf-8"?>
<com.moemoe.lalala.view.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="7dp"
    app:sl_shadowRadius="1dp"
    app:sl_cornerRadius="5dp"
    app:sl_dy="1dp"
    app:sl_shadowColor="@color/default_shadow_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_border_selector">
        <FrameLayout
            android:id="@+id/fl_image_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.moemoe.lalala.view.MyRoundedImageView
                android:id="@+id/iv_item_image"
                android:scaleType="centerCrop"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:rect_type="round"
                app:riv_left_top_radius="5dp"
                app:riv_left_bottom_radius="5dp"
                app:riv_right_top_radius="0dp"
                app:riv_right_bottom_radius="0dp"
                />

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_video_play"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/shape_calender_item1"
            android:text="第90章"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            />

        <LinearLayout
            android:id="@+id/ll_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/fl_image_root"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[galgame]"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_post_from_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="新闻部"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:paddingRight="6dp"
                    android:textSize="@dimen/txt_size_12"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_class_from_orange"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <com.moemoe.lalala.view.DocLabelView
            android:id="@+id/dv_label_root"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingTop="6dp"
            android:visibility="gone"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/ll_title_container"
            android:layout_toRightOf="@+id/fl_image_root"
            app:child_view_height="18dp"
            app:child_view_width="wrap_content"
            app:line_spacing="6dp"
            app:label_spacing="7dp"
            >
        </com.moemoe.lalala.view.DocLabelView>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_txt_main"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/ll_title_container"
            android:layout_toRightOf="@+id/fl_image_root"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:textSize="12dp"
            android:text="一部通过重制然后欲火重生的新动画，一夜之间就成为了现在日本女性爱看的动画作品、有很多的"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@+id/fl_image_root"
            android:layout_alignBottom="@+id/fl_image_root">

            <TextView
                android:id="@+id/tv_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="伊藤诚"
                android:textSize="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:textColor="@color/gray_txt_main"
                />

            <LinearLayout
                android:id="@+id/rl_doc_like_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_pants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_official_jc_small_normal" />

                <TextView
                    android:id="@+id/tv_post_pants_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:text="0"
                    android:textColor="@color/main_title_cyan"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_doc_comment_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:orientation="horizontal"
                android:paddingLeft="2dp" >

                <ImageView
                    android:id="@+id/iv_post_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_official_comment_normal" />

                <TextView
                    android:id="@+id/tv_post_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:textColor="@color/green_tag_normal"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="3小时前"
                android:textSize="14dp"
                android:textColor="@color/gray_txt_main" />

        </LinearLayout>
    </RelativeLayout>
</com.moemoe.lalala.view.ShadowLayout>