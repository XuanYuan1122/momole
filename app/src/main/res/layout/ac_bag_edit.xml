<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_cyan"
        app:navigationIcon="@drawable/ic_go_back"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="16"
            android:textSize="18dp"
            android:text="@string/label_modify"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_sava"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/label_done"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingRight="12dp"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/ll_name_root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_10">

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_2"
                android:background="@drawable/bg_normal_white_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginStart="@dimen/size_15"
                    android:text="@string/label_bag_name"
                    android:id="@+id/tv_name_label" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/size_15"
                    android:gravity="right"
                    android:textColor="@color/txt_gray_929292_red"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bg_root"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_2"
                android:background="@drawable/bg_normal_white_btn">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginStart="@dimen/size_15"
                    android:text="@string/label_cover"/>

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_15"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_2"
                android:background="@drawable/bg_normal_white_btn"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginStart="@dimen/size_15"
                    android:text="@string/label_coin_set" />

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/size_15"
                    android:gravity="right"
                    android:textColor="@color/pink_fb7ba2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_root"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_2"
                android:background="@drawable/bg_normal_white_btn"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginStart="@dimen/size_15"
                    android:text="添加到"/>

                <ImageView
                    android:id="@+id/iv_add_cover"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_15"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_folder_name"
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:id="@+id/tv_have_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/size_5"
                        android:textSize="@dimen/size_10"
                        android:textColor="@color/pink_fb7ba2"
                        android:visibility="invisible"
                        android:text="消耗节操查看"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_normal_white_btn"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_img"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingTop="@dimen/size_10"
                    android:paddingBottom="@dimen/size_10"
                    android:visibility="visible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_10"
                android:layout_height="55dp"
                android:background="@drawable/bg_logout"
                android:gravity="center"
                android:text="@string/label_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
    <com.moemoe.lalala.view.widget.view.KeyboardListenerLayout
        android:id="@+id/ll_comment_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f2f2f3"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:visibility="gone" >

        <EditText
            android:id="@+id/edt_comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_comment_send"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_gray"
            android:gravity="center_vertical"
            android:hint="@string/a_hint_input_comment"
            android:maxLines="5"
            android:minHeight="34dp"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="4dp"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/iv_comment_send"
            android:layout_width="48dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/edt_comment_input"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_rect_white_click_cyan"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/txt_white_gray"
            android:textSize="@dimen/size_15" />
    </com.moemoe.lalala.view.widget.view.KeyboardListenerLayout>
</RelativeLayout>