<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y148"
    android:background="@drawable/btn_white_border_selector_6">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x124"
        android:layout_height="@dimen/y124"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginStart="@dimen/x16"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_15"
        android:textColor="@color/black_1e1e1e"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_marginTop="@dimen/y36"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginStart="@dimen/x16"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/iv_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginStart="@dimen/x8"
        android:layout_alignBottom="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/size_12"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/x16"
        android:layout_marginEnd="@dimen/x16" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/size_12"
        android:textColor="@color/gray_929292"
        android:layout_marginTop="@dimen/y28"/>

    <TextView
        android:id="@+id/tv_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>