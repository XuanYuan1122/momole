<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/size_16"
        android:textColor="@color/main_cyan"
        android:text="@string/label_add_bag" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bag"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/size_12"
        android:textColor="@color/gray_d7d7d7"
        android:text="@string/label_bag_info"/>

    <ImageView
        android:id="@+id/iv_bag_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_array_right_gray"/>

    <TextView
        android:id="@+id/tv_bag_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_93d856"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/size_16"
        android:text="@string/label_added"
        android:layout_alignTop="@+id/iv_bag_arrow"
        android:layout_toLeftOf="@+id/iv_bag_arrow"
        android:layout_toStartOf="@+id/iv_bag_arrow"
        android:visibility="invisible"/>
</RelativeLayout>