<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_list_bottom_root_2"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="@dimen/y90">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:background="@color/gray_e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_tag_root_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_like_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/bg_feed_favorite"
                android:drawablePadding="@dimen/x10"
                android:textColor="@color/pink_fb7ba2"
                android:textSize="@dimen/x20"
                android:text="点赞"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_tag_root_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/x16"
            android:paddingEnd="@dimen/x16"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_like_item"
                android:layout_width="@dimen/y56"
                android:layout_height="@dimen/y56"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_feed_favorite"/>

            <LinearLayout
                android:id="@+id/ll_like_user_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_like_item"
                android:layout_marginStart="@dimen/x16">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x20"
                android:textColor="@color/gray_d7d7d7"
                android:text="赞"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_zan"
                android:textSize="@dimen/x20"
                android:textColor="@color/pink_fb7ba2"
                android:layout_marginEnd="@dimen/x4" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/size_1_px"
            android:layout_height="@dimen/y40"
            android:background="@color/gray_e8e8e8"
            android:layout_gravity="center_vertical"/>

        <FrameLayout
            android:id="@+id/fl_forward_root_2"
            android:layout_width="@dimen/x188"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_forward_num_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/btn_feed_repeat"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:textColor="@color/main_cyan"
                android:textSize="@dimen/x20" />

        </FrameLayout>

        <View
            android:layout_width="@dimen/size_1_px"
            android:layout_height="@dimen/y40"
            android:background="@color/gray_e8e8e8"
            android:layout_gravity="center_vertical"/>

        <FrameLayout
            android:id="@+id/fl_comment_root_2"
            android:layout_width="@dimen/x188"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_comment_num_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/btn_feed_comment"
                android:drawablePadding="@dimen/x10"
                android:textColor="@color/green_93d856"
                android:textSize="@dimen/x20" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>