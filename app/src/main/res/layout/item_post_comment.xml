<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_normal_white_btn"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/view_sep"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#929292"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"/>

    <com.moemoe.lalala.view.MyRoundedImageView
        android:id="@+id/iv_comment_creator"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_default_avatar_m"
        app:rect_type="circle" />

    <ImageView
        android:id="@+id/iv_club_owner_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comment_creator"
        android:layout_alignLeft="@+id/iv_comment_creator"
        android:layout_alignRight="@+id/iv_comment_creator"
        android:layout_alignTop="@+id/iv_comment_creator"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:scaleType="fitXY"
        android:src="@drawable/sign_owner_avatar_small" />

    <TextView
        android:id="@+id/tv_comment_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/iv_comment_creator"
        android:text="玻璃灵梦"
        android:textColor="@color/txt_creator"
        android:textSize="@dimen/txt_size_main" />
    
    <RelativeLayout
            android:id="@+id/rl_level_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_comment_creator_name"
            android:layout_toLeftOf="@+id/iv_comment_open"
            android:layout_marginTop="17dp" >

            <ImageView
                android:id="@+id/iv_level_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fd9f00"
                android:src="@drawable/bg_level_mini" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#fd9f00"
                android:textSize="9dp" />
        </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_comment_creator_name"
        android:layout_below="@+id/tv_comment_creator_name"
        android:layout_marginTop="3dp"
        android:text="12:34"
        android:textColor="@color/gray_secondary"
        android:textSize="@dimen/txt_size_mini" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_comment_creator"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="德玛西亚"
        android:textColor="@color/gray_main"
        android:textSize="@dimen/txt_size_main" />

    <ImageView
        android:id="@+id/iv_comment_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_comment_ops_normal"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:layout_marginTop="10dp"
        android:visibility="gone">

    </ListView>

