<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_normal_white_btn"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="15dp">

    <View
        android:id="@+id/view_sep"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#929292"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_comment_creator"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/bg_default_circle" />

    <RelativeLayout
        android:id="@+id/rl_level_pack"
        android:layout_width="26dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/iv_comment_creator"
        android:layout_alignLeft="@+id/iv_comment_creator"
        android:layout_alignStart="@+id/iv_comment_creator"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:padding="@dimen/size_1"
        android:background="@drawable/shape_white_10">

        <RelativeLayout
            android:id="@+id/rl_level_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_green_10">

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginStart="@dimen/size_4"
                android:textSize="@dimen/size_5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/tv_level"
                android:text="LV"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginStart="@dimen/size_2"
                android:layout_toRightOf="@+id/tv_lv"
                android:layout_toEndOf="@+id/tv_lv"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/size_7"/>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_club_owner_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comment_creator"
        android:layout_alignLeft="@+id/iv_comment_creator"
        android:layout_alignRight="@+id/iv_comment_creator"
        android:layout_alignTop="@+id/iv_comment_creator"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/sign_owner_avatar_small" />

    <TextView
        android:id="@+id/tv_comment_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/iv_comment_creator"
        android:text=""
        android:textColor="@color/txt_creator"
        android:textSize="@dimen/size_15" />

    <FrameLayout
        android:id="@+id/fl_huizhang_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignTop="@+id/tv_comment_creator_name"
        android:layout_toRightOf="@+id/tv_comment_creator_name"
        android:layout_toEndOf="@+id/tv_comment_creator_name"
        android:layout_marginTop="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_huizhang_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_1"
        android:layout_toRightOf="@+id/fl_huizhang_1"
        android:layout_toEndOf="@+id/fl_huizhang_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_huizhang_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_2"
        android:layout_toRightOf="@+id/fl_huizhang_2"
        android:layout_toEndOf="@+id/fl_huizhang_2"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_huizhang_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_d7d7d8"
        android:textSize="@dimen/size_12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:layout_alignTop="@+id/tv_comment_creator_name"
        android:text="@string/label_comment_floor"/>


    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_comment_creator_name"
        android:layout_below="@+id/tv_comment_creator_name"
        android:layout_marginTop="3dp"
        android:text="12:34"
        android:textColor="@color/gray_c1c1c1"
        android:textSize="@dimen/size_9" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_comment_creator"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignLeft="@+id/tv_comment_creator_name"
        android:text="德玛西亚"
        android:textColor="@color/gray_595e64"
        android:textSize="@dimen/size_15" />

    <ImageView
        android:id="@+id/iv_comment_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_comment_ops_normal"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:layout_marginTop="10dp"
        android:visibility="gone">

    </ListView>

    <LinearLayout
        android:id="@+id/ll_comment_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/tv_comment_creator_name"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>