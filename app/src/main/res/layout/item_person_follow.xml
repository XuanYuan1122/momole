<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_normal_white_btn">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginTop="17dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_toEndOf="@+id/iv_img"
        android:textColor="@color/black"
        android:textSize="@dimen/size_15" />

    <RelativeLayout
        android:id="@+id/rl_level_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_marginTop="17dp" >

        <ImageView
            android:id="@+id/iv_level_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fd9f00"
            android:src="@drawable/bg_level_mini" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="2"
            android:textColor="#fd9f00"
            android:textSize="9dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/size_12"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        />
</RelativeLayout>