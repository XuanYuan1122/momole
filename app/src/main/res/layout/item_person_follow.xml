<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_normal_white_btn">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1_px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_e8e8e8"/>

    <RelativeLayout
        android:id="@+id/rl_level_pack"
        android:layout_width="26dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignStart="@+id/iv_img"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:padding="@dimen/size_1"
        android:background="@drawable/shape_white_5">

        <RelativeLayout
            android:id="@+id/rl_level_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_green_10">

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginStart="@dimen/size_4"
                android:textSize="@dimen/size_5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/tv_level"
                android:text="LV"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginStart="@dimen/size_2"
                android:layout_toRightOf="@+id/tv_lv"
                android:layout_toEndOf="@+id/tv_lv"
                android:text="12"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/size_7"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginTop="17dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_toEndOf="@+id/iv_img"
        android:textColor="@color/black"
        android:textSize="@dimen/size_15" />

    <FrameLayout
        android:id="@+id/fl_huizhang_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignTop="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_marginTop="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_1"
        android:layout_toRightOf="@+id/fl_huizhang_1"
        android:layout_toEndOf="@+id/fl_huizhang_1"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_huizhang_3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_15"
        android:layout_alignBottom="@+id/fl_huizhang_2"
        android:layout_toRightOf="@+id/fl_huizhang_2"
        android:layout_toEndOf="@+id/fl_huizhang_2"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_huizhang_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:paddingRight="@dimen/size_4"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/size_12"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name" />
</RelativeLayout>