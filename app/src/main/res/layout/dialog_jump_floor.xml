<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/x420"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rect_corner_white_5">


    <RelativeLayout
        android:id="@+id/ll_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y72">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x36"
            android:text="跳转到"/>

        <EditText
            android:id="@+id/et_floor"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y52"
            android:layout_marginStart="@dimen/x16"
            android:layout_toEndOf="@+id/tv_text"
            android:textColor="@color/main_cyan"
            android:inputType="number"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="@dimen/x28"
            android:background="@drawable/shape_rect_border_main_no_background"/>

        <TextView
            android:id="@+id/tv_floor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_d7d7d7"
            android:textSize="@dimen/x20"
            android:layout_below="@+id/et_floor"
            android:layout_marginTop="@dimen/y6"
            android:layout_alignStart="@+id/et_floor"
            android:text="@string/label_total_floor"/>

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/x16"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x36"
            android:layout_toEndOf="@+id/et_floor"
            android:text="楼"/>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/x420"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y70"
        android:background="@color/gray_d7d7d7"/>

    <LinearLayout
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/main_cyan"
            android:background="@android:color/transparent"
            android:text="@string/label_cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y6"
            android:layout_marginBottom="@dimen/y6"
            android:background="@color/gray_d7d7d7"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/main_cyan"
            android:text="@string/label_confirm"/>
    </LinearLayout>
</LinearLayout>